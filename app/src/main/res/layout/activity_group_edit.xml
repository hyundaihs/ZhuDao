<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_group_edit_title_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_title_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hzncc.zhudao.widget.BatteryView
        android:id="@+id/activity_group_edit_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/activity_group_edit_title_bg"
        app:layout_constraintLeft_toRightOf="@+id/activity_group_import_excel"
        app:layout_constraintTop_toTopOf="@+id/activity_group_edit_title_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编组"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_group_edit_title_bg"
        app:layout_constraintLeft_toLeftOf="@+id/activity_group_edit_title_bg"
        app:layout_constraintRight_toRightOf="@+id/activity_group_edit_title_bg"
        app:layout_constraintTop_toTopOf="@+id/activity_group_edit_title_bg" />

    <TextView
        android:id="@+id/activity_group_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="添加"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_group_edit_title_bg"
        app:layout_constraintRight_toLeftOf="@+id/activity_group_exit"
        app:layout_constraintTop_toTopOf="@+id/activity_group_edit_title_bg" />

    <ImageButton
        android:id="@+id/activity_group_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:src="@mipmap/close"
        app:layout_constraintBottom_toBottomOf="@+id/activity_group_edit_title_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_group_edit_title_bg" />

    <TextView
        android:id="@+id/activity_group_import_excel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="导入Excel"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_group_edit_title_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_group_edit_title_bg" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_group_edit_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_group_edit_title_bg" />

</android.support.constraint.ConstraintLayout>