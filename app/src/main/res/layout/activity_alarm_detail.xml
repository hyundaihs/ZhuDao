<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_alarm_detail_title_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_title_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_alarm_detail_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_alarm_detail_title_bg"
        app:layout_constraintLeft_toLeftOf="@+id/activity_alarm_detail_title_bg"
        app:layout_constraintRight_toRightOf="@+id/activity_alarm_detail_title_bg"
        app:layout_constraintTop_toTopOf="@+id/activity_alarm_detail_title_bg" />

    <ImageButton
        android:id="@+id/activity_alarm_detail_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:src="@mipmap/gallery_delete"
        app:layout_constraintBottom_toBottomOf="@+id/activity_alarm_detail_title_bg"
        app:layout_constraintRight_toLeftOf="@+id/activity_alarm_detail_close"
        app:layout_constraintTop_toTopOf="@+id/activity_alarm_detail_title_bg" />

    <ImageButton
        android:id="@+id/activity_alarm_detail_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:src="@mipmap/close"
        app:layout_constraintBottom_toBottomOf="@+id/activity_alarm_detail_title_bg"
        app:layout_constraintRight_toRightOf="@+id/activity_alarm_detail_title_bg"
        app:layout_constraintTop_toTopOf="@+id/activity_alarm_detail_title_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_alarm_detail_viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_alarm_detail_title_bg" />

</android.support.constraint.ConstraintLayout>